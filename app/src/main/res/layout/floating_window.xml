<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:contentDescription="@string/desc_slide_up"
            android:src="@android:drawable/arrow_up_float"
            app:backgroundTint="#4CAF50"
            app:fabSize="mini"
            tools:ignore="ImageContrastCheck,ClassNameCheck" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_left_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:contentDescription="@string/desc_slide_left"
                android:src="@android:drawable/ic_media_previous"
                app:backgroundTint="#4CAF50"
                app:fabSize="mini"
                tools:ignore="ImageContrastCheck,ClassNameCheck" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_setting_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:contentDescription="@string/desc_settings"
                android:src="@android:drawable/ic_menu_preferences"
                app:backgroundTint="#4CAF50"
                app:fabSize="mini"
                tools:ignore="ImageContrastCheck,ClassNameCheck" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_right_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:contentDescription="@string/desc_slide_right"
                android:src="@android:drawable/ic_media_next"
                app:backgroundTint="#4CAF50"
                app:fabSize="mini"
                tools:ignore="ImageContrastCheck,ClassNameCheck" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_down_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:contentDescription="@string/desc_slide_down"
            android:src="@android:drawable/arrow_down_float"
            app:backgroundTint="#4CAF50"
            app:fabSize="mini"
            tools:ignore="ImageContrastCheck,ClassNameCheck" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:contentDescription="@string/desc_close"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:backgroundTint="#4CAF50"
            app:fabSize="mini"
            tools:ignore="ImageContrastCheck,ClassNameCheck" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_expand_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:contentDescription="@string/desc_expand"
        android:src="@android:drawable/ic_input_add"
        android:visibility="gone"
        app:backgroundTint="#4CAF50"
        app:fabSize="mini"
        tools:ignore="ImageContrastCheck" />

</LinearLayout>
